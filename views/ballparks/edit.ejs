<% layout("layouts/boilerplate") %>
<div class="row">
    <h3 class="text-center">Edit Ballpark</h3>
    <div class="col-6 offset-3">
        <form action="/ballparks/<%=ballpark._id%>?_method=PUT" method="POST">
            <div class="mb-3">
                <label class="form-label" for="ballpark">Ballpark Name</label>
                <input class="form-control" type="text" id="ballpark" name="ballpark[ballpark]" value="<%=ballpark.ballpark %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="team">Team</label>
                <input class="form-control" type="text" id="team" name="ballpark[team]" value="<%= ballpark.team%>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="ballpark[image]" value="<%= ballpark.image%>">
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Update Ballpark</button>
            </div>            
        </form>
        <!-- <a href="/ballparks">All Ballparks</a> -->
    </div>
</div>