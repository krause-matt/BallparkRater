<% layout("layouts/boilerplate") %>
<div class="row">
    <h3 class="text-center" style="font-weight: bold;">Register</h3>
    <div class="col-6 offset-3">
        <form action="/register" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
                <label class="form-label" for="username">Enter Username</label>
                <input class="form-control" type="text" id="username" name="username" required>
                <div class="invalid-feedback">
                  Please provide a valid username
                </div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="email">Enter Email</label>
              <input class="form-control" type="email" id="email" name="email" required>
              <div class="invalid-feedback">
                  Please provide a valid email
              </div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="password">Enter Password</label>
              <input class="form-control" type="password" id="password" name="password" required>
              <div class="invalid-feedback">
                  Please provide a valid password
              </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Submit</button>
            </div>            
        </form>
    </div>
</div>